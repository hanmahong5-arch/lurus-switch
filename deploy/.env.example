# Lurus Switch Production Environment Variables
# Copy this file to .env and fill in the values

# ============================================================
# Database Credentials
# ============================================================
POSTGRES_USER=lurus
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD_1

CLICKHOUSE_USER=lurus
CLICKHOUSE_PASSWORD=CHANGE_ME_STRONG_PASSWORD_2

REDIS_PASSWORD=CHANGE_ME_STRONG_PASSWORD_3

# ============================================================
# Application Secrets
# ============================================================
# Session secret for new-api (generate with: openssl rand -hex 32)
SESSION_SECRET=CHANGE_ME_RANDOM_STRING_64_CHARS

# JWT secret for sync-service (generate with: openssl rand -hex 32)
JWT_SECRET=CHANGE_ME_RANDOM_STRING_64_CHARS

# Grafana admin password
GRAFANA_PASSWORD=CHANGE_ME_ADMIN_PASSWORD

# ============================================================
# SSL/TLS (Caddy auto-HTTPS)
# ============================================================
# Email for Let's Encrypt certificate notifications
ACME_EMAIL=admin@lurus.cn

# ============================================================
# Optional: External Services
# ============================================================
# Casdoor OAuth (if using)
# CASDOOR_ENDPOINT=https://auth.lurus.cn
# CASDOOR_CLIENT_ID=xxx
# CASDOOR_CLIENT_SECRET=xxx

# Lago Billing (if using)
# LAGO_API_URL=http://localhost:3001
# LAGO_SECRET_KEY=xxx
